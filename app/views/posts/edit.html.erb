<%= render 'shared/navbar' %>

<div class="container nav-margin">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col">
          <h4 class="card-title">Editing Post</h4>
        </div>
        <div class="col">
          <%= link_to "Delete Post", @post, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger float-right" %>
        </div>
      </div>
      <%= render 'form', post: @post %>
    </div>
    <div class="card-footer">
      <small class="text-muted"><%= "Last updated " + post_time_readable(@post.updated_at) + " ago" %></small>
      <small class="text-muted show-links">
        <%= link_to 'Back', @post %>
      </small>
    </div>
  </div>
</div>
